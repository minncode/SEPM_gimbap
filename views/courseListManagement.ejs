<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course List Management</title>
    <style>
        .popup {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: white;
            padding: 20px;
            border: 1px solid #ccc;
            z-index: 1000;
            max-width: 400px; /* 조정 가능한 팝업 최대 너비 */
            width: 100%;
        }

        .popup-header {
            display: flex;
            justify-content: flex-end;
            margin-bottom: 10px;
        }

        .popup-close {
            cursor: pointer;
            background-color: #ff0000;
            color: white;
            border: none;
            padding: 5px 10px;
            font-size: 16px;
        }

        .overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 999;
        }

        /* Remove list styles and make each list item a flex container */
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        /* Make buttons the same width */
        .action-buttons button {
            width: 100px; /* 조정 가능한 버튼 최대 너비 */
            margin-right: 5px;
        }
    </style>
</head>

<body>
    <h1>Course List Management</h1>

    <!-- Display Course List -->
    <h2>Course List</h2>
    <button onclick="showAddForm()">Add Course</button>
    <table>
        <tr>
            <th>Course ID</th>
            <th>Course Code</th>
            <th>Course Name</th>
            <th>Semester</th>
            <th>Credits</th>
            <th>Action</th>
        </tr>
        <% for (let i = 0; i < courseList.length; i++) { %>
            <tr>
                <td><%= courseList[i].courseID %></td>
                <td><%= courseList[i].courseCode %></td>
                <td><%= courseList[i].courseName %></td>
                <td><%= courseList[i].semester %></td>
                <td><%= courseList[i].credits %></td>
                <td class="action-buttons">
                    <button onclick="showEditForm('<%= courseList[i].courseID %>', '<%= courseList[i].courseCode %>', '<%= courseList[i].courseName %>', '<%= courseList[i].semester %>', '<%= courseList[i].credits %>')">Edit</button>
                    <button onclick="showDeleteForm('<%= courseList[i].courseID %>', '<%= courseList[i].courseCode %>', '<%= courseList[i].courseName %>', '<%= courseList[i].semester %>', '<%= courseList[i].credits %>')">Delete</button>
                </td>
            </tr>
        <% } %>
    </table>

    <!-- Add Course Form -->
    <div class="popup" id="addPopup">
        <div class="popup-header">
            <button class="popup-close" onclick="closePopup('addPopup')">X</button>
        </div>
        <form action="/courseListManagement/add" method="post">
            <label for="courseID">Course ID:</label>
            <input type="text" name="courseID" required><br>
            <label for="courseID">Course Code:</label>
            <input type="text" name="courseCode" required><br>
            <label for="courseName">Course Name:</label>
            <input type="text" name="courseName" required><br>
            <label for="semester">Semester:</label>
            <input type="text" name="semester" required><br>
            <label for="credits">Credits:</label>
            <input type="text" name="credits" required><br>
            <button type="submit">Add Course</button>
        </form>
    </div>

<!-- Edit Course Form -->
<div class="popup" id="editPopup">
    <div class="popup-header">
        <button class="popup-close" onclick="closePopup('editPopup')">X</button>
    </div>
    <form action="/courseListManagement/edit" method="post">
        <label for="courseIDEdit">Course ID:</label>
        <input type="text" name="courseIDEdit" required readonly ><br>

        <label for="newCourseID">New Course ID:</label>
        <input type="text" name="newCourseID" required><br>

        <label for="newCourseCode">New Course Code:</label>
        <input type="text" name="newCourseCode" required><br>

        <label for="newCourseName">New Course Name:</label>
        <input type="text" name="newCourseName" required><br>

        <label for="newSemester">New Semester:</label>
        <input type="text" name="newSemester" required><br>

        <label for="newCredits">New Credits:</label>
        <input type="text" name="newCredits" required><br>

        <button type="submit">Edit Course</button>
    </form>
</div>

    <!-- Delete Course Form -->
    <div class="popup" id="deletePopup">
        <div class="popup-header">
            <button class="popup-close" onclick="closePopup('deletePopup')">X</button>
        </div>
        <form action="/courseListManagement/delete" method="post">
            <label for="courseIDDelete">Course ID:</label>
            <input type="text" name="courseIDDelete" required readonly ><br>
            <label for="courseCodeDelete">Course Code:</label>
            <input type="text" name="courseCodeDelete" required readonly ><br>
            <label for="courseNameDelete">Course Name:</label>
            <input type="text" name="courseNameDelete" required readonly ><br>
            <label for="semesterDelete">Semester:</label>
            <input type="text" name="semesterDelete" required readonly ><br>
            <label for="creditsDelete">Credits:</label>
            <input type="text" name="creditsDelete" required readonly ><br>
            <button type="submit">Delete Course</button>
        </form>
    </div>

    <div class="overlay" onclick="closeAllPopups()"></div>

    <script>
        function showAddForm() {
            showPopup('addPopup');
        }

        function showEditForm(courseID, courseCode, courseName, semester, credits) {
            showPopup('editPopup');
            document.querySelector('[name="newCourseID"]').value = courseID;
            document.querySelector('[name="courseIDEdit"]').value = courseID;
            document.querySelector('[name="newCourseCode"]').value = courseCode;
            document.querySelector('[name="newCourseName"]').value = courseName;
            document.querySelector('[name="newSemester"]').value = semester;
            document.querySelector('[name="newCredits"]').value = credits;
        }

        function showDeleteForm(courseID, courseCode, courseName, semester, credits) {
            showPopup('deletePopup');
            document.querySelector('[name="courseIDDelete"]').value = courseID;
            document.querySelector('[name="courseCodeDelete"]').value = courseCode;
            document.querySelector('[name="courseNameDelete"]').value = courseName;
            document.querySelector('[name="semesterDelete"]').value = semester;
            document.querySelector('[name="creditsDelete"]').value = credits;
        }

        function showPopup(popupId) {
            document.getElementById(popupId).style.display = 'block';
            document.querySelector('.overlay').style.display = 'block';
        }

        function closePopup(popupId) {
            document.getElementById(popupId).style.display = 'none';
            document.querySelector('.overlay').style.display = 'none';
        }

        function closeAllPopups() {
            closePopup('addPopup');
            closePopup('editPopup');
            closePopup('deletePopup');
        }
    </script>
</body>

</html>
