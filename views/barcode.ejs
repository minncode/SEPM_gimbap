<%- include("./partials/header") %>

    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/barcode.css">
</head>
<body>
    <header>
        <img class="logo" src="/images/rmitlogo.png" alt="RMIT logo" >
        <h2>RMIT Pay</h2>
        
    </header>
    <div class="mainContent">
        <div class="mainContainers">
            <div class="barCode">
                <img src="/images/free-icon-barcode-lines-58994.png">
            </div>
            <div class="accountInfo">
                <p class="accountNumber">Account Number: <span id="accountNumber">1234567890</span></p>
                <p class="balance">Balance: VND<span id="balance">1000</span></p>
            </div>
            <button class="QR">
                <div class="buttonContent">
                    <img src="/images/free-icon-barcode-scan-5393325.png" alt="QR Code">
                    <span>PAYMENT</span>
                </div>
            </button>
        </div>

        </div>
    </div>
    
</body>
