<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course History Management</title>
    <style>
        .popup {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: white;
            padding: 20px;
            border: 1px solid #ccc;
            z-index: 1000;
            max-width: 400px; /* 조정 가능한 팝업 최대 너비 */
            width: 100%;
        }

        .popup-header {
            display: flex;
            justify-content: flex-end;
            margin-bottom: 10px;
        }

        .popup-close {
            cursor: pointer;
            background-color: #ff0000;
            color: white;
            border: none;
            padding: 5px 10px;
            font-size: 16px;
        }

        .overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 999;
        }

        /* Remove list styles and make each list item a flex container */
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        /* Make buttons the same width */
        .action-buttons button {
            width: 100px; /* 조정 가능한 버튼 최대 너비 */
            margin-right: 5px;
        }
    </style>
</head>

<body>
    <h1>Course History Management</h1>

    <!-- Display Course History List -->
    <h2>Course History List</h2>
    <button onclick="showAddCourseForm()">Add Course</button>
    <table>
        <tr>
            <th>Course ID</th>
            <th>Course Name</th>
            <th>Lecturer</th>
            <th>Action</th>
        </tr>
        <% for (let i = 0; i < courseHistoryList.length; i++) { %>
            <tr>
                <td><%= courseHistoryList[i].courseID %></td>
                <td><%= courseHistoryList[i].courseName %></td>
                <td><%= courseHistoryList[i].lecturer %></td>
                <td class="action-buttons">
                    <button onclick="showEditCourseForm('<%= courseHistoryList[i]._id %>', '<%= courseHistoryList[i].courseID %>', '<%= courseHistoryList[i].courseName %>', '<%= courseHistoryList[i].lecturer %>')">Edit</button>
                    <button onclick="showDeleteCourseForm('<%= courseHistoryList[i]._id %>', '<%= courseHistoryList[i].courseID %>', '<%= courseHistoryList[i].courseName %>', '<%= courseHistoryList[i].lecturer %>')">Delete</button>
                </td>
            </tr>
        <% } %>
    </table>

    <!-- Add Course Form -->
    <div class="popup" id="addCoursePopup">
        <div class="popup-header">
            <button class="popup-close" onclick="closePopup('addCoursePopup')">X</button>
        </div>
        <form action="/admin/courseHistoryManagement/add" method="post">
            <label for="courseID">Course ID:</label>
            <input type="text" name="courseID" required><br>
            <label for="courseName">Course Name:</label>
            <input type="text" name="courseName" required><br>
            <label for="lecturer">Lecturer:</label>
            <input type="text" name="lecturer" required><br>
            <button type="submit">Add Course</button>
        </form>
    </div>

    <!-- Edit Course Form -->
    <div class="popup" id="editCoursePopup">
        <div class="popup-header">
            <button class="popup-close" onclick="closePopup('editCoursePopup')">X</button>
        </div>
        <form action="/admin/courseHistoryManagement/edit" method="post">
            <input type="text" name="courseIdEdit" required readonly style="display: none;">
            <label for="newCourseID">New Course ID:</label>
            <input type="text" name="newCourseID" required><br>
            <label for="newCourseName">New Course Name:</label>
            <input type="text" name="newCourseName" required><br>
            <label for="newLecturer">New Lecturer:</label>
            <input type="text" name="newLecturer" required><br>
            <button type="submit">Edit Course</button>
        </form>
    </div>

    <!-- Delete Course Form -->
    <div class="popup" id="deleteCoursePopup">
        <div class="popup-header">
            <button class="popup-close" onclick="closePopup('deleteCoursePopup')">X</button>
        </div>
        <form action="/admin/courseHistoryManagement/delete" method="post">
            <input type="text" name="courseIdDelete" required readonly style="display: none;">
            <label for="courseIDDelete">Course ID:</label>
            <input type="text" name="courseIDDelete" required readonly><br>
            <label for="courseNameDelete">Course Name:</label>
            <input type="text" name="courseNameDelete" required readonly><br>
            <label for="lecturerDelete">Lecturer:</label>
            <input type="text" name="lecturerDelete" required readonly><br>
            <button type="submit">Delete Course</button>
        </form>
    </div>

    <div class="overlay" onclick="closeAllCoursePopups()"></div>

    <script>
        function showAddCourseForm() {
            showPopup('addCoursePopup');
        }

        function showEditCourseForm(courseId, courseID, courseName, lecturer) {
            showPopup('editCoursePopup');
            document.querySelector('[name="courseIdEdit"]').value = courseId;
            document.querySelector('[name="newCourseID"]').value = courseID;
            document.querySelector('[name="newCourseName"]').value = courseName;
            document.querySelector('[name="newLecturer"]').value = lecturer;
        }

        function showDeleteCourseForm(courseId, courseID, courseName, lecturer) {
            showPopup('deleteCoursePopup');
            document.querySelector('[name="courseIdDelete"]').value = courseId;
            document.querySelector('[name="courseIDDelete"]').value = courseID;
            document.querySelector('[name="courseNameDelete"]').value = courseName;
            document.querySelector('[name="lecturerDelete"]').value = lecturer;
        }

        function showPopup(popupId) {
            document.getElementById(popupId).style.display = 'block';
            document.querySelector('.overlay').style.display = 'block';
        }

        function closePopup(popupId) {
            document.getElementById(popupId).style.display = 'none';
            document.querySelector('.overlay').style.display = 'none';
        }

        function closeAllCoursePopups() {
            closePopup('addCoursePopup');
            closePopup('editCoursePopup');
            closePopup('deleteCoursePopup');
        }
    </script>
</body>

</html>
