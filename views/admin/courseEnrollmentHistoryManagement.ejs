<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course Enrollment History Management</title>
    <style>
        .popup {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: white;
            padding: 20px;
            border: 1px solid #ccc;
            z-index: 1000;
            max-width: 400px; /* 조정 가능한 팝업 최대 너비 */
            width: 100%;
        }

        .popup-header {
            display: flex;
            justify-content: flex-end;
            margin-bottom: 10px;
        }

        .popup-close {
            cursor: pointer;
            background-color: #ff0000;
            color: white;
            border: none;
            padding: 5px 10px;
            font-size: 16px;
        }

        .overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 999;
        }

        /* Remove list styles and make each list item a flex container */
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        /* Make buttons the same width */
        .action-buttons button {
            width: 100px; /* 조정 가능한 버튼 최대 너비 */
            margin-right: 5px;
        }
    </style>
</head>

<body>
    <h1>Course Enrollment History Management</h1>

    <!-- Display Course Enrollment History List -->
    <h2>Course Enrollment History List</h2>
    <button onclick="showAddHistoryForm()">Add Enrollment History</button>
    <table>
        <tr>
            <th>Email</th>
            <th>Course ID</th>
            <th>Enrollment Semester</th>
            <th>Action</th>
        </tr>
        <% for (let i = 0; i < enrollmentHistoryList.length; i++) { %>
            <tr>
                <td><%= enrollmentHistoryList[i].email %></td>
                <td><%= enrollmentHistoryList[i].courseID %></td>
                <td><%= enrollmentHistoryList[i].enrollmentSemester %></td>
                <td class="action-buttons">
                    <button onclick="showEditHistoryForm('<%= enrollmentHistoryList[i]._id %>', '<%= enrollmentHistoryList[i].email %>', '<%= enrollmentHistoryList[i].courseID %>', '<%= enrollmentHistoryList[i].enrollmentSemester %>')">Edit</button>
                    <button onclick="showDeleteHistoryForm('<%= enrollmentHistoryList[i]._id %>', '<%= enrollmentHistoryList[i].email %>', '<%= enrollmentHistoryList[i].courseID %>', '<%= enrollmentHistoryList[i].enrollmentSemester %>')">Delete</button>
                </td>
            </tr>
        <% } %>
    </table>

    <!-- Add Enrollment History Form -->
    <div class="popup" id="addHistoryPopup">
        <div class="popup-header">
            <button class="popup-close" onclick="closePopup('addHistoryPopup')">X</button>
        </div>
        <form action="/admin/courseEnrollmentHistoryManagement/add" method="post">
            <label for="email">Email:</label>
            <input type="text" name="email" required><br>
            <label for="courseID">Course ID:</label>
            <input type="text" name="courseID" required><br>
            <label for="enrollmentSemester">Enrollment Semester:</label>
            <input type="text" name="enrollmentSemester" required><br>
            <button type="submit">Add Enrollment History</button>
        </form>
    </div>

<!-- Edit Enrollment History Form -->
<div class="popup" id="editHistoryPopup">
    <div class="popup-header">
        <button class="popup-close" onclick="closePopup('editHistoryPopup')">X</button>
    </div>
    <form action="/admin/courseEnrollmentHistoryManagement/edit" method="post">
        <input type="text" name="enrollmentIdEdit" required readonly style="display: none;">
        <label for="newEmail">New Email:</label>
        <input type="text" name="newEmail" required><br>
        <label for="newCourseID">New Course ID:</label>
        <input type="text" name="newCourseID" required><br>
        <label for="newEnrollmentSemester">New Enrollment Semester:</label>
        <input type="text" name="newEnrollmentSemester" required><br>
        <button type="submit">Edit Enrollment History</button>
    </form>
</div>

<!-- Delete Enrollment History Form -->
<div class="popup" id="deleteHistoryPopup">
    <div class="popup-header">
        <button class="popup-close" onclick="closePopup('deleteHistoryPopup')">X</button>
    </div>
    <form action="/admin/courseEnrollmentHistoryManagement/delete" method="post">
        <input type="text" name="enrollmentIdDelete" required readonly style="display: none;">
        <label for="emailDelete">Email:</label>
        <input type="text" name="emailDelete" required readonly><br>
        <label for="courseIDDelete">Course ID:</label>
        <input type="text" name="courseIDDelete" required readonly><br>
        <label for="enrollmentSemesterDelete">Enrollment Semester:</label>
        <input type="text" name="enrollmentSemesterDelete" required readonly><br>
        <button type="submit">Delete Enrollment History</button>
    </form>
</div>

    <div class="overlay" onclick="closeAllHistoryPopups()"></div>

    <script>
        function showAddHistoryForm() {
            showPopup('addHistoryPopup');
        }

        function showEditHistoryForm(enrollmentId, email, courseID, enrollmentSemester) {
        showPopup('editHistoryPopup');
        document.querySelector('[name="enrollmentIdEdit"]').value = enrollmentId;
        document.querySelector('[name="newEmail"]').value = email;
        document.querySelector('[name="newCourseID"]').value = courseID;
        document.querySelector('[name="newEnrollmentSemester"]').value = enrollmentSemester;
    }

    function showDeleteHistoryForm(enrollmentId, email, courseID, enrollmentSemester) {
        showPopup('deleteHistoryPopup');
        document.querySelector('[name="enrollmentIdDelete"]').value = enrollmentId;
        document.querySelector('[name="emailDelete"]').value = email;
        document.querySelector('[name="courseIDDelete"]').value = courseID;
        document.querySelector('[name="enrollmentSemesterDelete"]').value = enrollmentSemester;
    }

        function showPopup(popupId) {
            document.getElementById(popupId).style.display = 'block';
            document.querySelector('.overlay').style.display = 'block';
        }

        function closePopup(popupId) {
            document.getElementById(popupId).style.display = 'none';
            document.querySelector('.overlay').style.display = 'none';
        }

        function closeAllHistoryPopups() {
            closePopup('addHistoryPopup');
            closePopup('editHistoryPopup');
            closePopup('deleteHistoryPopup');
        }
    </script>
</body>

</html>
