<!-- paymentBalanceManagement.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Balance Management</title>
    <style>
        .popup {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: white;
            padding: 20px;
            border: 1px solid #ccc;
            z-index: 1000;
            max-width: 400px; /* 조정 가능한 팝업 최대 너비 */
            width: 100%;
        }

        .popup-header {
            display: flex;
            justify-content: flex-end;
            margin-bottom: 10px;
        }

        .popup-close {
            cursor: pointer;
            background-color: #ff0000;
            color: white;
            border: none;
            padding: 5px 10px;
            font-size: 16px;
        }

        .overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 999;
        }

        /* Remove list styles and make each list item a flex container */
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        /* Make buttons the same width */
        .action-buttons button {
            width: 100px; /* 조정 가능한 버튼 최대 너비 */
            margin-right: 5px;
        }
    </style>
</head>

<body>
    <h1>Payment Balance Management</h1>

    <!-- Display Payment Balance List -->
    <h2>Payment Balance List</h2>
    <button onclick="showAddBalanceForm()">Add Balance</button>
    <table>
        <tr>
            <th>Email</th>
            <th>Balance</th>
            <th>Action</th>
        </tr>
        <% for (let i = 0; i < balanceList.length; i++) { %>
            <tr>
                <td><%= balanceList[i].email %></td>
                <td><%= balanceList[i].balance %></td>
                <td class="action-buttons">
                    <button onclick="showEditBalanceForm('<%= balanceList[i]._id %>', '<%= balanceList[i].email %>', '<%= balanceList[i].balance %>')">Edit</button>
                    <button onclick="showDeleteBalanceForm('<%= balanceList[i]._id %>', '<%= balanceList[i].email %>', '<%= balanceList[i].balance %>')">Delete</button>
                </td>
            </tr>
        <% } %>
    </table>

    <!-- Add Balance Form -->
    <div class="popup" id="addBalancePopup">
        <div class="popup-header">
            <button class="popup-close" onclick="closePopup('addBalancePopup')">X</button>
        </div>
        <form action="/admin/paymentBalanceManagement/add" method="post">
            <label for="email">Email:</label>
            <input type="text" name="email" required><br>
            <label for="balance">Balance:</label>
            <input type="text" name="balance" required><br>
            <label for="adminNote">Admin Note:</label>
            <input type="text" name="adminNote" required><br>
            <button type="submit">Add Balance</button>
        </form>
    </div>

    <!-- Edit Balance Form -->
    <div class="popup" id="editBalancePopup">
        <div class="popup-header">
            <button class="popup-close" onclick="closePopup('editBalancePopup')">X</button>
        </div>
        <form action="/admin/paymentBalanceManagement/edit" method="post">
            <input type="text" name="balanceIdEdit" required readonly style="display: none;">
            <label for="emailEdit">Email:</label>
            <input type="text" name="emailEdit" required readonly><br>
            <label for="newBalance">New Balance:</label>
            <input type="text" name="newBalance" required><br>
            <label for="adminNoteEdit">Admin Note:</label>
            <input type="text" name="adminNoteEdit" required><br>
            <button type="submit">Edit Balance</button>
        </form>
    </div>

    <!-- Delete Balance Form -->
    <div class="popup" id="deleteBalancePopup">
        <div class="popup-header">
            <button class="popup-close" onclick="closePopup('deleteBalancePopup')">X</button>
        </div>
        <form action="/admin/paymentBalanceManagement/delete" method="post">
            <input type="text" name="balanceIdDelete" required readonly style="display: none;">
            <label for="emailDelete">Email:</label>
            <input type="text" name="emailDelete" required readonly><br>
            <label for="balanceDelete">Balance:</label>
            <input type="text" name="balanceDelete" required readonly><br>
            <label for="adminNoteDelete">Admin Note:</label>
            <input type="text" name="adminNoteDelete" required><br>
            <button type="submit">Delete Balance</button>
        </form>
    </div>

    <div class="overlay" onclick="closeAllBalancePopups()"></div>

    <script>
        function showAddBalanceForm() {
            showPopup('addBalancePopup');
        }

        function showEditBalanceForm(balanceId, email, balance) {
            showPopup('editBalancePopup');
            document.querySelector('[name="balanceIdEdit"]').value = balanceId;
            document.querySelector('[name="emailEdit"]').value = email;
            document.querySelector('[name="newBalance"]').value = balance;
        }

        function showDeleteBalanceForm(balanceId, email, balance) {
            showPopup('deleteBalancePopup');
            document.querySelector('[name="balanceIdDelete"]').value = balanceId;
            document.querySelector('[name="emailDelete"]').value = email;
            document.querySelector('[name="balanceDelete"]').value = balance;
        }

        function showPopup(popupId) {
            document.getElementById(popupId).style.display = 'block';
            document.querySelector('.overlay').style.display = 'block';
        }

        function closePopup(popupId) {
            document.getElementById(popupId).style.display = 'none';
            document.querySelector('.overlay').style.display = 'none';
        }

        function closeAllBalancePopups() {
            closePopup('addBalancePopup');
            closePopup('editBalancePopup');
            closePopup('deleteBalancePopup');
        }
    </script>
</body>

</html>
